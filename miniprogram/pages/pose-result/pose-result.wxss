.result-container {
  min-height: 100vh;
  background: #fff;
  padding: calc(88rpx + env(safe-area-inset-top)) 32rpx 32rpx;
}

/* 分数部分 */
.score-section {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff4b33 100%);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 75, 51, 0.15);
}

.final-score {
  text-align: center;
  margin-bottom: 48rpx;
}

.score-value {
  font-size: 96rpx;
  color: #fff;
  font-weight: 600;
  line-height: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.score-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 16rpx;
  display: block;
}

.score-details {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 24rpx;
}

.detail-item {
  text-align: center;
}

.detail-item .label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
  display: block;
}

.detail-item .value {
  font-size: 36rpx;
  color: #fff;
  font-weight: 500;
}

/* 评价部分 */
.evaluation-section {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 32rpx;
}

.evaluation-item {
  margin-bottom: 32rpx;
}

.evaluation-item:last-child {
  margin-bottom: 0;
}

.part-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.suggestion-item .icon {
  margin-right: 12rpx;
  margin-top: 4rpx;
}

.suggestion-item text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 24rpx;
  padding: 0 32rpx calc(env(safe-area-inset-bottom) + 32rpx);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #fff 20%);
}

.retry-btn, .back-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.retry-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff4b33 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(255, 75, 51, 0.25);
}

.back-btn {
  background: #f5f5f5;
  color: #666;
}

.retry-btn:active, .back-btn:active {
  transform: translateY(2rpx);
  opacity: 0.9;
} 