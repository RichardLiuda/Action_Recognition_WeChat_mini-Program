.camera {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.info-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: calc(88rpx + env(safe-area-inset-top)) 32rpx 32rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 100%);
  z-index: 100;
}

.score-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.score-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-item .label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.score-item .value {
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
}

.score-item .value .unit {
  font-size: 24rpx;
  margin-left: 4rpx;
}

.pose-info {
  text-align: center;
  padding: 24rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  backdrop-filter: blur(8px);
}

.pose-info .pose-name {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.pose-info .pose-tip {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.exit-btn {
  position: absolute;
  top: calc(44rpx + env(safe-area-inset-top));
  right: 32rpx;
  width: 72rpx;
  height: 72rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  backdrop-filter: blur(8px);
}

.exit-btn:active {
  opacity: 0.8;
} 