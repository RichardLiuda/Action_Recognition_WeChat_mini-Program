.container {
    min-height: 100vh;
    background: #fff;
    padding-top: env(safe-area-inset-top);
}

/* 头部区域样式 */
.search-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding: calc(env(safe-area-inset-top) + 8px) 0 8px;
    display: flex;
    align-items: center;
    z-index: 100;
}

.back-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 8px;
    flex-shrink: 0;
}

.back-arrow {
    width: 12px;
    height: 12px;
    border-top: 2px solid #000;
    border-left: 2px solid #000;
    transform: rotate(-45deg);
}

