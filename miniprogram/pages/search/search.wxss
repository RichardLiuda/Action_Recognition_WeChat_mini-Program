/* 内容区域样式 */
.search-content {
    padding-top: 48px;
    height: calc(100vh - env(safe-area-inset-top));
    box-sizing: border-box;
}

/* 历史搜索样式 */
.history-section {
    padding: 0 20px;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.section-header .title {
    font-size: 14px;
    color: #999;
}

.clear-btn text {
    font-size: 14px;
    color: #576b95;
}

.history-list {
    display: flex;
    flex-direction: column;
}

.history-item {
    padding: 12px 0;
    font-size: 17px;
    color: #333;
    border-bottom: 1px solid #f5f5f5;
}

/* 搜索结果样式 */
.search-results {
    padding: 0 20px;
}

.result-item {
    display: flex;
    padding: 12px 0;
    border-bottom: 1px solid #f5f5f5;
}

.result-item .thumbnail {
    width: 120px;
    height: 80px;
    border-radius: 4px;
    margin-right: 12px;
}

.result-item .info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.result-item .title {
    font-size: 17px;
    color: #333;
    line-height: 1.4;
    margin-bottom: 8px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.result-item .stats {
    display: flex;
    align-items: center;
    font-size: 12px;
    color: #999;
}

.result-item .author {
    color: #666;
}

.result-item .dot {
    margin: 0 4px;
} 